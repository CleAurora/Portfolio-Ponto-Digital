 <main>
        
        <!--Parte que só pode aparecer para a pessoa que fez o login -->
        <section class="container formulario">
            <h2 class="content">Avaliação</h2>
            <form method="POST" action="/Cliente/EnviarComentario">
               
                <img src="imagens/5-estrela.png"  class= "estrelas" alt="5 estrelas para que a pessoa possa avaliar o site" width="220px" height="80px">

                <label for ="comente"></label>
                <textarea  id="comente" rows="10" name="comente" maxlength="500" wrap="hard" placeholder="Deixe seu comentário aqui" required></textarea>

                <input type="submit" value="Enviar Comentário">
            </form>
        </section>
  

    

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script>
    $(function(){
        var nav = $('.menu');
        var botao = $('.btn_menu');
        botao.on('click', function(){
            nav.toggleClass("active");
        });
    }); 
    </script>