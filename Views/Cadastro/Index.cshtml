@model Portfolio_Ponto_Digital.ViewModels.ClienteViewModel;
<header>

@{
    Html.RenderPartial("_HeaderNavBar");
}


    <div id="apresentacao">
        <div>
            <img src="imagens/logo.png" alt="Logotipo: Círculo azul claro com om Brasil em azul escuro no cebtro e uma localização em cima de tudo.">
        </div>
        <div>
            <h1>Ponto Digital <br></h1>
            <h2>Supervisão Inteligente</h2>
        </div>
    </div>
   
</header>


 <main>
    <section class="container formulario">
        <h2 class="content">Cadastro</h2>
        <form method="GET" action="index.html">
            <label for="nome">Nome Completo: </label>
            <br>
            <input name="nome" id="nome" type="text" maxlength="300" minlength="3" placeholder="Digite seu nome completo aqui" required>
            <br>
            
            <label for="CPF">CPF:</label>
            <br>
            <input type="number" name="CPF" id="cpf" minlength="11" maxlength="12" placeholder="Digite seu cpf aqui sem traço" required>
            <br>

            <label for="dataNascimento">Data de Nascimento</label>
            <br>
            <input type="date" name="dataNascimento" id="DataNascimento" required>
            <br>
            
            <label for="cargo">Cargo: </label>
            <br>
            <input type="text" name="cargo" placeholder="Digite seu cargo na empresa">
            <br>
            
            <label for="endereco">Endereço: </label>
            <br>
            <input type="text" name="endereco" id="endereco" maxlength="300" minlength="3" placeholder="Digite seu endereço completo aqui">
            <br>
            
            <label for="email">E-mail: </label>
            <br>
            <input type="email" name="email" id="email" placeholder="Digite seu e-mail aqui" required >
            <br>
            
            <label for="telefone">Telefone para contato: </label>
            <br>
            <input type="tel" name="telefone" id="telefone" placeholder="Digite seu telefone aqui" required>
            <br>

            <div>        
                <label for="plano">Plano</label>
                <br>

                <select name="plano" id="plano" required>
                    <option value="" disabled selected>Selecione:</option>
                    @foreach (var item in Model.planos)
                    {
                        <option value="@item.Id @item.Nome @item.Preco">@item.Id @item.Nome @item.Preco</option>    
                    }
                   
                </select>
            </div>

            <label for="Senha">Senha:</label>
            <br>
            <input type="senha" name="senha" id="senha" minlength="4" maxlength="12" placeholder="Digite sua senha aqui (4 a 12 chars)" required>
            <br>

            <label for="ConfirmaSenha">Confirme a Senha por favor:</label>
            <br>
            <input type="senha" name="confirmaSenha" id="confirmaSenha" minlength="4" maxlength="12" placeholder="Confirme sua senha aqui" required>
            <br>
            <br>
            <input type="submit" value="Enviar Cadastro">
        </form>
    </section>
    
</main>
